{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5437;Database=card_db;Username=admin;Password=root"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "ExternalServices": {
    "OrganizationApi": "http://localhost:5104",
    "BoardApi": "http://localhost:5106"
  },
  "Elastic": {
    "ServiceName": "card"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "card-service",
    "AutoOffsetReset": "Earliest",
    "DeleteBoardTopic": "board-delete-send",
    "DeleteColumnTopic": "column-delete-send"

  }
}
